# Database Configuration
DATABASE_URL="postgresql://user:password@postgres:5432/alertdb"

# Grafana Configuration
GRAFANA_API_URL="https://grafana.observability.devo.com"
GRAFANA_API_KEY="api_key_grafana" # Placeholder: Replace with your actual Grafana API Key

# Jira Service Management Configuration
JIRA_URL="https://devoinc.atlassian.net"
JIRA_USER_EMAIL="user@email.com"
JIRA_API_TOKEN="api_token" # IMPORTANT: Replace with your actual Jira API Token
JIRA_PROJECT_KEY="OP" # Example: Your Jira project key (e.g., 'ITSM', 'PROJ')
JIRA_INCIDENT_ISSUE_TYPE="Incident" # Example: The issue type for incidents (e.g., 'Incident', 'Service Request')
JIRA_ACKNOWLEDGE_TRANSITION_NAME="To Do" # Exact name of the transition in your Jira workflow for acknowledging alerts
JIRA_RESOLVE_TRANSITION_NAME="Completed" # Exact name of the transition in your Jira workflow for resolving alerts

# Sync Configuration
GRAFANA_SYNC_INTERVAL_SECONDS=600

# Frontend Configuration
REACT_APP_API_BASE_URL="http://localhost:8000"
REACT_APP_JIRA_URL="https://devoinc.atlassian.net"

# Security
SECRET_KEY=your-secret-key-here